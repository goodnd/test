<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.web.controller.goodnight.mapper.PrizeStockMapper">
    
    <resultMap type="PrizeStock" id="PrizeStockResult">
        <result property="id"    column="id"    />
        <result property="goods"    column="goods"    />
        <result property="goodsPrice"    column="goodsPrice"    />
        <result property="goodsNumber"    column="goodsNumber"    />
        <result property="totalMoney"    column="totalMoney"    />
        <result property="buyer"    column="buyer"    />
        <result property="createTime"    column="createTime"    />
    </resultMap>

    <sql id="selectPrizeStockVo">
        select id, goods, goodsPrice, goodsNumber, totalMoney, buyer, createTime from sm_prize_stock
    </sql>

    <select id="selectPrizeStockList" parameterType="PrizeStock" resultMap="PrizeStockResult">
        <include refid="selectPrizeStockVo"/>
        <where>  
            <if test="goods != null  and goods != ''"> and goods = #{goods}</if>
            <if test="buyer != null  and buyer != ''"> and buyer = #{buyer}</if>
            <if test="createTime != null "> and createTime = #{createTime}</if>
        </where>
    </select>
    
    <select id="selectPrizeStockById" parameterType="Long" resultMap="PrizeStockResult">
        <include refid="selectPrizeStockVo"/>
        where id = #{id}
    </select>

    <insert id="insertPrizeStock" parameterType="PrizeStock" useGeneratedKeys="true" keyProperty="id">
        insert into sm_prize_stock
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="goods != null and goods != ''">goods,</if>
            <if test="goodsPrice != null">goodsPrice,</if>
            <if test="goodsNumber != null">goodsNumber,</if>
            <if test="totalMoney != null">totalMoney,</if>
            <if test="buyer != null">buyer,</if>
            <if test="createTime != null">createTime,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="goods != null and goods != ''">#{goods},</if>
            <if test="goodsPrice != null">#{goodsPrice},</if>
            <if test="goodsNumber != null">#{goodsNumber},</if>
            <if test="totalMoney != null">#{totalMoney},</if>
            <if test="buyer != null">#{buyer},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updatePrizeStock" parameterType="PrizeStock">
        update sm_prize_stock
        <trim prefix="SET" suffixOverrides=",">
            <if test="goods != null and goods != ''">goods = #{goods},</if>
            <if test="goodsPrice != null">goodsPrice = #{goodsPrice},</if>
            <if test="goodsNumber != null">goodsNumber = #{goodsNumber},</if>
            <if test="totalMoney != null">totalMoney = #{totalMoney},</if>
            <if test="buyer != null">buyer = #{buyer},</if>
            <if test="createTime != null">createTime = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deletePrizeStockById" parameterType="Long">
        delete from sm_prize_stock where id = #{id}
    </delete>

    <delete id="deletePrizeStockByIds" parameterType="String">
        delete from sm_prize_stock where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>