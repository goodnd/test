<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.web.controller.goodnight.mapper.SiteManagementMapper">
    
    <resultMap type="SiteManagement" id="SiteManagementResult">
        <result property="id"    column="id"    />
        <result property="siteName"    column="site_name"    />
        <result property="address"    column="address"    />
        <result property="plot"    column="plot"    />
        <result property="sitRecyclingStation"    column="sit_recycling_station"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectSiteManagementVo">
        select id, site_name, address, plot, sit_recycling_station, create_by, create_time, update_by, update_time from sm_site_management
    </sql>

    <select id="selectSiteManagementList" parameterType="SiteManagement" resultMap="SiteManagementResult">
        <include refid="selectSiteManagementVo"/>
        <where>  
            <if test="siteName != null  and siteName != ''"> and site_name like concat('%', #{siteName}, '%')</if>
            <if test="address != null  and address != ''"> and address like concat('%', #{address}, '%')</if>
            <if test="plot != null  and plot != ''"> and plot like concat('%', #{plot}, '%')</if>
            <if test="sitRecyclingStation != null  and sitRecyclingStation != ''"> and sit_recycling_station like concat('%', #{sitRecyclingStation}, '%')</if>
            <if test="createBy != null  and createBy != ''"> and create_by = #{createBy}</if>
        </where>
    </select>
    
    <select id="selectSiteManagementById" parameterType="Long" resultMap="SiteManagementResult">
        <include refid="selectSiteManagementVo"/>
        where id = #{id}
    </select>

    <insert id="insertSiteManagement" parameterType="SiteManagement" useGeneratedKeys="true" keyProperty="id">
        insert into sm_site_management
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="siteName != null and siteName != ''">site_name,</if>
            <if test="address != null and address != ''">address,</if>
            <if test="plot != null and plot != ''">plot,</if>
            <if test="sitRecyclingStation != null">sit_recycling_station,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="siteName != null and siteName != ''">#{siteName},</if>
            <if test="address != null and address != ''">#{address},</if>
            <if test="plot != null and plot != ''">#{plot},</if>
            <if test="sitRecyclingStation != null">#{sitRecyclingStation},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateSiteManagement" parameterType="SiteManagement">
        update sm_site_management
        <trim prefix="SET" suffixOverrides=",">
            <if test="siteName != null and siteName != ''">site_name = #{siteName},</if>
            <if test="address != null and address != ''">address = #{address},</if>
            <if test="plot != null and plot != ''">plot = #{plot},</if>
            <if test="sitRecyclingStation != null">sit_recycling_station = #{sitRecyclingStation},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSiteManagementById" parameterType="Long">
        delete from sm_site_management where id = #{id}
    </delete>

    <delete id="deleteSiteManagementByIds" parameterType="String">
        delete from sm_site_management where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>