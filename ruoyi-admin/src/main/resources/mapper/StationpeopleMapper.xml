<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.web.controller.goodnight.mapper.StationpeopleMapper">
    
    <resultMap type="Stationpeople" id="StationpeopleResult">
        <result property="id"    column="id"    />
        <result property="stationpeopleId"    column="stationPeople_id"    />
        <result property="name"    column="name"    />
        <result property="sex"    column="sex"    />
        <result property="phone"    column="phone"    />
        <result property="homeAddress"    column="home_address"    />
        <result property="job"    column="job"    />
        <result property="area"    column="area"    />
        <result property="station"    column="station"    />
        <result property="notes"    column="notes"    />
    </resultMap>

    <sql id="selectStationpeopleVo">
        select id, stationPeople_id, name, sex, phone, home_address, job, area, station, notes from sm_stationpeople
    </sql>

    <select id="selectStationpeopleList" parameterType="Stationpeople" resultMap="StationpeopleResult">
        <include refid="selectStationpeopleVo"/>
        <where>  
            <if test="stationpeopleId != null  and stationpeopleId != ''"> and stationPeople_id like concat('%', #{stationpeopleId}, '%')</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="sex != null  and sex != ''"> and sex = #{sex}</if>
            <if test="area != null  and area != ''"> and area like concat('%', #{area}, '%')</if>
            <if test="station != null  and station != ''"> and station like concat('%', #{station}, '%')</if>
        </where>
    </select>
    
    <select id="selectStationpeopleById" parameterType="Long" resultMap="StationpeopleResult">
        <include refid="selectStationpeopleVo"/>
        where id = #{id}
    </select>

    <insert id="insertStationpeople" parameterType="Stationpeople">
        insert into sm_stationpeople
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="stationpeopleId != null and stationpeopleId != ''">stationPeople_id,</if>
            <if test="name != null">name,</if>
            <if test="sex != null">sex,</if>
            <if test="phone != null">phone,</if>
            <if test="homeAddress != null">home_address,</if>
            <if test="job != null">job,</if>
            <if test="area != null">area,</if>
            <if test="station != null">station,</if>
            <if test="notes != null">notes,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="stationpeopleId != null and stationpeopleId != ''">#{stationpeopleId},</if>
            <if test="name != null">#{name},</if>
            <if test="sex != null">#{sex},</if>
            <if test="phone != null">#{phone},</if>
            <if test="homeAddress != null">#{homeAddress},</if>
            <if test="job != null">#{job},</if>
            <if test="area != null">#{area},</if>
            <if test="station != null">#{station},</if>
            <if test="notes != null">#{notes},</if>
         </trim>
    </insert>

    <update id="updateStationpeople" parameterType="Stationpeople">
        update sm_stationpeople
        <trim prefix="SET" suffixOverrides=",">
            <if test="stationpeopleId != null and stationpeopleId != ''">stationPeople_id = #{stationpeopleId},</if>
            <if test="name != null">name = #{name},</if>
            <if test="sex != null">sex = #{sex},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="homeAddress != null">home_address = #{homeAddress},</if>
            <if test="job != null">job = #{job},</if>
            <if test="area != null">area = #{area},</if>
            <if test="station != null">station = #{station},</if>
            <if test="notes != null">notes = #{notes},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteStationpeopleById" parameterType="Long">
        delete from sm_stationpeople where id = #{id}
    </delete>

    <delete id="deleteStationpeopleByIds" parameterType="String">
        delete from sm_stationpeople where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>